            @Html.Label("Mahalle")
            <input type="text" asp-for="ServiceMap.Mahalle" class="form-control" />
        </div>
        <div class="form-group">
            @Html.Label("Koy")
            <input type="text" asp-for="ServiceMap.Koy" class="form-control" />
