@model REstatePresentation.Models.ServiceTerrainAddViewModel
@{
    ViewData["Title"] = "EditServiceTerrain";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">İlan Güncelleme Sayfası</h1>
    <form method="post">
        @Html.HiddenFor(y=>y.ServiceTerrain.ServiceTerrainID)
        @Html.HiddenFor(y=>y.ServiceTerrain.ServiceInfoId)
        @Html.HiddenFor(y=>y.ServiceTerrain.ServiceMapId)
        @Html.HiddenFor(y=>y.ServiceInfo.ServiceInfoID)
        @Html.HiddenFor(y=>y.ServicePhoto.ServicePhotoID)
        @Html.HiddenFor(y=>y.ServicePhoto.ServiceTerrainId)
        @Html.HiddenFor(y=>y.ServiceMap.ServiceMapID)
        
        <div class="form-group">
            @Html.Label("Başlık")
            <span asp-validation-for="ServiceTerrain.Baslik" class="text-danger"></span>
            <input type="text" asp-for="ServiceTerrain.Baslik" class="form-control" />
        </div><br />
        <div class="form-group">
            @Html.Label("Fotograf Yolu")
            <span asp-validation-for="ServiceTerrain.Gorsel" class="text-danger"></span>
            <input type="text" asp-for="ServiceTerrain.Gorsel" class="form-control" />
        </div><br />
        <div class="form-group">
            @Html.Label("Fiyat")
            <span asp-validation-for="ServiceTerrain.Fiyat" class="text-danger"></span>
            <input type="number" asp-for="ServiceTerrain.Fiyat" class="form-control" />
        </div><br />
        <div class="form-group">
            @Html.Label("TapuDurumu")
            <span asp-validation-for="ServiceTerrain.TapuDurumu" class="text-danger"></span>
