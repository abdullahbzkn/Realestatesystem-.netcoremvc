@model EntityLayer.Concrete.Gallery
@{
    ViewData["Title"] = "EditGallery";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">İlanlar Açıklama Bölümü Düzenleme</h1>
    <form method="post">
        @Html.HiddenFor(x=>x.GalleryID)
        <div class="form-group">
            @Html.Label("IlanlarMetni")
            <span asp-validation-for="IlanlarMetni" class="text-danger"></span>
            <input type="text" asp-for="IlanlarMetni" class="form-control" />
        </div><br />
        <button class="btn btn-outline-info">Değişiklikleri Kaydet</button>
    </form>
</div>
