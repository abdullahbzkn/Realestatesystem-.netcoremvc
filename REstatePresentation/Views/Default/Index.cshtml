@{
ViewData["Title"] = "Index";
Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <section id="infinite" class="text-white tm-font-big tm-parallax">

        @await Component.InvokeAsync("_TopNavPartial")

        @await Component.InvokeAsync("_EntrancePartial")
       
        <div class="tm-next tm-intro-next">
            <a href="#whatwedo" class="text-center tm-down-arrow-link">
                <i class="fas fa-2x fa-arrow-down tm-down-arrow"></i>
            </a>
        </div>
    </section>

    <section id="whatwedo" class="tm-section-pad-top">

        <div class="container">
            @await Component.InvokeAsync("_WhatWeDoPartial")
        </div>

    </section>

    <section id="testimonials" class="tm-section-pad-top tm-parallax-2">
        <div class="container tm-testimonials-content">
            <div class="row">
                <div class="col-lg-12 tm-content-box">
                    <h2 class="text-white text-center mb-4 tm-section-title">Hakkımızda</h2>

                    @await Component.InvokeAsync("_AboutUsPartial")

                    @await Component.InvokeAsync("_TeamPartial")

                </div>
            </div>
        </div>
        <div class="tm-bg-overlay"></div>
    </section>

    <section id="gallery" class="tm-section-pad-top">
        <div class="container tm-container-gallery">

            @await Component.InvokeAsync("_GalleryDescriptionPartial")

            @await Component.InvokeAsync("_GalleryPartial")

        </div>
    </section>

    <section id="contact" class="tm-section-pad-top tm-parallax-2">

        <div class="container tm-container-contact">

            <div class="row">

                @await Component.InvokeAsync("_ContactPartial")

                @await Html.PartialAsync("/Views/Default/SendMessage.cshtml")

                @await Component.InvokeAsync("_AddressPartial")

            </div>
        </div>

        <footer class="text-center small tm-footer">
            <p class="mb-0">Copyright &copy; @DateTime.Now.Year Buzkan Emlak</p>
        </footer>

    </section>

   @await Html.PartialAsync("/Views/Default/ScriptPartial.cshtml")
</body>
</html>