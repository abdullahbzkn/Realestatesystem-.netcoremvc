@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Tüm Mesajlar</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Mesajlar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kişi</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesaj Detayları</th>
                            <th>Sil</th>
                            <th>Mesajı Okundu İşaretle</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Kişi</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesajı Detayları</th>
                            <th>Sil</th>
                            <th>Mesajı Okundu İşaretle</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date</td>
                                <td>
                                    @if (item.OkunduBilgisi == false)
                                    {
                                        <a href="/Contact/ReadMessage/@item.ContactID" class="btn btn-outline-primary">Mesajı Gör</a>
                                    }
                                    else
                                    {
                                        <a href="/Contact/ReadMessage/@item.ContactID" class="btn btn-outline-secondary">Mesajı Gör</a>
                                    }

                                </td>
                                <td>
                                    <a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger btn-circle">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/Contact/ChangeStatus/@item.ContactID" class="btn btn-info btn-circle">
                                        <i class="fas fa-check"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>